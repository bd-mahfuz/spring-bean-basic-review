<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="hello" class="com.learnSpring.beanPostProcessor.Hello">
		<property name="message" value="welcome"></property>
	</bean>

	<bean id="customer" class="com.learnSpring.beanPostProcessor.Customer">
		<property name="name" value="Karim"></property>
		<property name="id" value="1"></property>
	</bean>
	
	<bean class="com.learnSpring.beanPostProcessor.CustomerBeanPostProcessor"></bean>
</beans>
